<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Fallback name="Job">
            <Sequence name="Task4">
                <Inverter>
                    <Action ID="ACheckConditionFlag" param="{Param}" task="0"/>
                </Inverter>
                <Action ID="ACheckConditionFlag" param="{Param}" task="3"/>
                <Sequence name="T4finish">
                    <Action ID="ASetFlag" flagupdate="{Param}" param="{Param}" task="1" value="false"/>
                    <Action ID="ASetFlag" flagupdate="{Param}" param="{Param}" task="2" value="false"/>
                    <Action ID="ASetFlag" flagupdate="{Param}" param="{Param}" task="3" value="false"/>
                </Sequence>
            </Sequence>
            <Sequence name="Task3">
                <Inverter>
                    <Action ID="ACheckConditionFlag" param="{Param}" task="0"/>
                </Inverter>
                <Action ID="ACheckConditionFlag" param="{Param}" task="2"/>
                <Sequence name="T3Place">
                    <SubTree ID="T3PlaceSteps" commarm="commarm" commgripper="commgripper" containerpose="ContainerPose" param="Param"/>
                    <SubTree ID="Execution" commarm="CommArm" commgripper="CommGripper" fhelp="FHelp"/>
                </Sequence>
            </Sequence>
            <Sequence name="Task2">
                <Inverter>
                    <Action ID="ACheckConditionFlag" param="{Param}" task="0"/>
                </Inverter>
                <Action ID="ACheckConditionFlag" param="{Param}" task="1"/>
                <Sequence name="T2Pick">
                    <SubTree ID="T2PickSteps" commarm="CommArm" commgripper="CommGripper" goalarm="BlockPose" param="Param" paramupdate="Param"/>
                    <SubTree ID="Execution" commarm="CommArm" commgripper="CommGripper" fhelp="FHelp"/>
                </Sequence>
            </Sequence>
            <Sequence name="Task1">
                <Inverter>
                    <Action ID="ACheckConditionFlag" param="{Param}" task="0"/>
                </Inverter>
                <Action ID="ACheckConditionLoad" oneparam="{OneParam}"/>
                <Sequence name="T1FindObjStart">
                    <Sequence name="SetMarker">
                        <SetBlackboard output_key="BlockMarker" value="1"/>
                        <SetBlackboard output_key="ContainerMarkerA" value="2"/>
                        <SetBlackboard output_key="ContainerMarkerB" value="3"/>
                    </Sequence>
                    <SubTree ID="T1FindObjs" blockmarker="BlockMarker" blockpose="BlockPose" containermarkerA="ContainerMarkerA" containermarkerB="ContainerMarkerB" containerpose="ContainerPose" param="Param" paramupdate="Param"/>
                </Sequence>
            </Sequence>
            <Sequence name="Help">
                <Action ID="AReloadParam" initialin="{Initial1}" initialout="{Initial1}" param="{Param}" type="gripper"/>
                <Action ID="AReloadParam" initialin="{Initial2}" initialout="{Initial2}" param="{Param}" type="arm"/>
                <Action ID="AReloadParam" initialin="{Initial3}" initialout="{Initial3}" param="{Param}" type="flag"/>
                <SetBlackboard output_key="OneParam" value="true"/>
            </Sequence>
        </Fallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="Execution">
        <SequenceStar>
            <Fallback name="RobotExec">
                <Sequence name="MoveRobot">
                    <Action ID="APathPlanning" goal="{commarm}" plan="{_plan}"/>
                    <Action ID="AFollowPath" plan="{_plan}"/>
                </Sequence>
                <Sequence name="NeedHelp">
                    <SetBlackboard name="ASetFlagHelp" output_key="fhelp" value="true"/>
                </Sequence>
            </Fallback>
            <Fallback name="GripperExec">
                <Sequence name="MoveGripper">
                    <Action ID="AGripperMove" command="{commgripper}"/>
                </Sequence>
                <Sequence name="NeedHelp">
                    <SetBlackboard name="ASetFlagHelp" output_key="fhelp" value="true"/>
                </Sequence>
            </Fallback>
        </SequenceStar>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="SubCheckPreCondition">
        <Sequence name="RunCheckPreCondition">
            <Action ID="ACheckConditionArm" goalarm="{goalarm_}" param="{param_}" step="{step}"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="SubGenerateCommand">
        <Sequence name="GenerateCom">
            <Action ID="APreparePoseArm" goalarm="{goalarm_}" name="AGeneComArm" param="{param_}" step="{step}" targetout="{commarm}" targettype="{targettype}"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="T1FindObjs">
        <Sequence name="Searching">
            <Action ID="AFindObjContainers" blockmarker="{blockmarker}" blockpose="{blockpose}" containermarkerA="{containermarkerA}" containermarkerB="{containermarkerB}" containerpose="{containerpose}"/>
            <Action ID="ASetFlag" flagupdate="{paramupdate}" param="{param}" task="1" value="true"/>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="T2PickSteps">
        <Fallback name="T2Steps">
            <Sequence name="T2Step*">
                <SetBlackboard output_key="prestep" value="3"/>
                <SubTree ID="SubCheckPreCondition" goalarm_="goalarm" param_="param" step="prestep"/>
                <Action ID="ASetFlag" flagupdate="paramupdate" param="param" task="2" value="true"/>
            </Sequence>
            <Sequence name="T2Step3">
                <SetBlackboard output_key="prestep" value="2"/>
                <SubTree ID="SubCheckPreCondition" goalarm_="goalarm" param_="param" step="prestep"/>
                <SetBlackboard output_key="currentstep" value="3"/>
                <SetBlackboard output_key="targettype" value="waypoint"/>
                <SetBlackboard output_key="commgripper" value="none"/>
                <SubTree ID="SubGenerateCommand" commarm="commarm" commgripper="commgripper" goalarm_="goalarm" param_="param" step="currentstep" targettype="waypoint"/>
            </Sequence>
            <Sequence name="T2Step2">
                <SetBlackboard output_key="prestep" value="1"/>
                <SubTree ID="SubCheckPreCondition" goalarm_="goalarm" param_="param" step="prestep"/>
                <SetBlackboard output_key="currentstep" value="2"/>
                <SetBlackboard output_key="targettype" value="waypoint"/>
                <SetBlackboard output_key="commgripper" value="close"/>
                <SubTree ID="SubGenerateCommand" commarm="commarm" commgripper="commgripper" goalarm_="goalarm" param_="param" step="currentstep" targettype="waypoint"/>
            </Sequence>
            <Sequence name="T2Step1">
                <SetBlackboard output_key="currentstep" value="1"/>
                <SetBlackboard output_key="targettype" value="pose"/>
                <SetBlackboard output_key="commgripper" value="open"/>
                <SubTree ID="SubGenerateCommand" commarm="commarm" commgripper="commgripper" goalarm_="goalarm" param_="param" step="currentstep" targettype="targettype"/>
            </Sequence>
        </Fallback>
    </BehaviorTree>
    <!-- ////////// -->
    <BehaviorTree ID="T3PlaceSteps">
        <Fallback name="T3Steps">
            <Sequence name="T3Step*">
                <SubTree ID="SubCheckPreCondition" goalarm_="goalarm" param_="param" step="5"/>
                <Action ID="ASetFlag" flagupdate="param" param="param" task="3" value="true"/>
            </Sequence>
            <Sequence name="T3Step3">
                <SubTree ID="SubCheckPreCondition" goalarm_="goalarm" param_="param" step="5"/>
                <SubTree ID="SubGenerateCommand" commarm="commarm" commgripper="commgripper" goalarm_="goalarm" param_="param" step="6" targettype="waypoint"/>
            </Sequence>
            <Sequence name="T3Step2">
                <SubTree ID="SubCheckPreCondition" goalarm_="goalarm" param_="param" step="4"/>
                <SubTree ID="SubGenerateCommand" commarm="commarm" commgripper="commgripper" goalarm_="goalarm" param_="param" step="5" targettype="waypoint"/>
            </Sequence>
            <Sequence name="T3Step1">
                <SubTree ID="SubGenerateCommand" commarm="commarm" commgripper="commgripper" goalarm_="goalarm" param_="param" step="4" targettype="pose"/>
            </Sequence>
        </Fallback>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="ACheckConditionArm">
            <input_port name="goalarm"/>
            <input_port name="param"/>
            <input_port name="step"/>
        </Action>
        <Action ID="ACheckConditionFlag">
            <input_port name="param"/>
            <input_port name="task"/>
        </Action>
        <Action ID="ACheckConditionLoad">
            <input_port default="{OneParam}" name="oneparam"/>
        </Action>
        <Action ID="AFindObjContainers">
            <input_port name="blockmarker"/>
            <output_port name="blockpose"/>
            <input_port name="containermarkerA"/>
            <input_port name="containermarkerB"/>
            <output_port name="containerpose"/>
        </Action>
        <Action ID="AFollowPath">
            <input_port name="plan"/>
        </Action>
        <Action ID="AGripperMove">
            <input_port name="command"/>
        </Action>
        <Action ID="APathPlanning">
            <input_port name="goal"/>
            <input_port name="plan"/>
        </Action>
        <Action ID="APreparePoseArm">
            <input_port name="goalarm"/>
            <input_port name="param"/>
            <input_port name="step"/>
            <output_port name="targetout"/>
            <input_port name="targettype"/>
        </Action>
        <Action ID="AReloadParam">
            <input_port name="initialin"/>
            <output_port name="initialout"/>
            <input_port name="param"/>
            <input_port name="type"/>
        </Action>
        <Action ID="ASetFlag">
            <output_port name="flagupdate"/>
            <input_port name="param"/>
            <input_port name="task"/>
            <input_port name="value"/>
        </Action>
        <SubTree ID="Execution">
            <input_port name="commarm"/>
            <input_port name="commgripper"/>
            <input_port name="fhelp"/>
        </SubTree>
        <SubTree ID="SubCheckPreCondition">
            <input_port default="goalarm" name="goalarm_"/>
            <input_port default="param" name="param_"/>
            <input_port name="step"/>
        </SubTree>
        <SubTree ID="SubGenerateCommand">
            <output_port name="commarm"/>
            <output_port name="commgripper"/>
            <input_port default="goalarm" name="goalarm_"/>
            <input_port default="param" name="param_"/>
            <input_port name="step"/>
            <inout_port name="targettype"/>
        </SubTree>
        <SubTree ID="T1FindObjs">
            <input_port name="blockmarker"/>
            <output_port name="blockpose"/>
            <input_port name="containermarkerA"/>
            <input_port name="containermarkerB"/>
            <output_port name="containerpose"/>
            <input_port name="param"/>
            <output_port name="paramupdate"/>
        </SubTree>
        <SubTree ID="T2PickSteps">
            <input_port name="commarm"/>
            <input_port name="commgripper"/>
            <input_port name="goalarm"/>
            <input_port name="param"/>
            <output_port name="paramupdate"/>
        </SubTree>
        <SubTree ID="T3PlaceSteps">
            <input_port name="commarm"/>
            <input_port name="commgripper"/>
            <input_port name="containerpose"/>
            <input_port name="param"/>
        </SubTree>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

